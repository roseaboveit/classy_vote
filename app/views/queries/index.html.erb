<h1>Listing queries</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @queries.each do |query| %>
      <tr>
        <td><%= query.question %></td>
        <td><%= link_to 'Show', query %></td>
        <td>
          <% if query.user_id == current_user.id %>
          <%= link_to 'Edit', edit_query_path(query) %>
          <% end %>
        </td>
        <td>
          <% if query.user_id == current_user.id %>
          <%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

